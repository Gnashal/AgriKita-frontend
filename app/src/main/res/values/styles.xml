<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CategoryButton">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/category_button_rounded_edge</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ProductCardAddToCartButton">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/agrikita_dark_green</item>
        <item name="strokeColor">@color/agrikita_dark_green</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">5dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ProductCardBuyNowButton">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/agrikita_dark_green</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/agrikita_dark_green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">5dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>