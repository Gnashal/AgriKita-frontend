<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CategoryButton">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/category_button_rounded_edge</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ProductCardAddToCartButton">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/agrikita_dark_green</item>
        <item name="strokeColor">@color/agrikita_dark_green</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">5dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ProductCardBuyNowButton">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/agrikita_dark_green</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/agrikita_dark_green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">5dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="GreenButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/agrikita_green</item> <!-- Your green -->
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">20dp</item>
    </style>

    <style name="WhiteOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/white</item>
        <item name="strokeColor">@android:color/darker_gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">20dp</item>
    </style>

    <style name="CounterButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#CCCCCC</item>
        <item name="android:textColor">#000000</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="RemoveButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">#D32F2F</item> <!-- Red -->
        <item name="iconTint">#D32F2F</item>
    </style>


</resources>