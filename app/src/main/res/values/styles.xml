<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CategoryButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/category_button_rounded_edge</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PaginatorButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/paginator_button_rounded_edge</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ProductCardAddToCartButton">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/agrikita_dark_green</item>
        <item name="strokeColor">@color/agrikita_dark_green</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">5dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="pdp_ProductCardAddToCartButton">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/agrikita_dark_green</item>
        <item name="strokeColor">@color/agrikita_dark_green</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ProductCardBuyNowButton">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/agrikita_dark_green</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/agrikita_dark_green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">5dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="GreenButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/agrikita_green</item> <!-- Your green -->
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">20dp</item>
    </style>

    <style name="WhiteOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/white</item>
        <item name="strokeColor">@android:color/darker_gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">20dp</item>
    </style>

    <style name="CounterButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#CCCCCC</item>
        <item name="android:textColor">#000000</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="RemoveButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">#D32F2F</item> <!-- Red -->
        <item name="iconTint">#D32F2F</item>
    </style>

    <!-- Style for Green Filled Button -->
    <style name="notifGreen" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/agrikita_dark_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">50dp</item> <!-- Very rounded -->
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <!-- Style for Outlined Button -->
    <style name="notifWhite" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/agrikita_dark_green</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">50dp</item> <!-- Very rounded -->
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>


    <!-- Date item for the horizontal date selector -->
    <style name="DateItem">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:background">@drawable/tab_selector</item> <!-- you can create a rounded bg if you want -->
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Highlighted Date Item (selected date) -->
    <style name="DateItem.Highlighted">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:backgroundTint">#2E7D32</item> <!-- green highlight -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/social_circle</item> <!-- optional if you want a separate bg -->
    </style>

    <!-- WeatherService Stat Text (Humidity, Pressure, Wind) -->
    <style name="WeatherStat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>