<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <!-- Seller name outside and above the card -->
    <TextView
        android:id="@+id/productcard_seller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltaire's Farm"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Product Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/pdp_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Tomato"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"/>
                <!-- Product Detail -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <!-- Product Image -->
                    <FrameLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/product_card_rounded_edges"
                        android:clipToOutline="true">

                        <ImageView
                            android:id="@+id/productcard_product_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/agrikita_logo" />
                    </FrameLayout>

                    <!-- Price and Rating -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <!-- Rating -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                app:srcCompat="@drawable/product_card_star" />

                            <TextView
                                android:id="@+id/productcard_product_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="5"
                                android:textColor="@color/agrikita_coin_yellow"
                                android:textSize="8sp" />
                        </LinearLayout>

                        <!-- Price -->
                        <TextView
                            android:id="@+id/productcard_product_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Php 69.69"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <!-- Unit -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Per Kilo"
                            android:textColor="#616161"
                            android:textSize="8sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Category Tag -->

                    <TextView
                        android:id="@+id/productcard_product_category"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/product_card_round_tag"
                        android:padding="2sp"
                        android:layout_gravity="center"
                        android:text="Hello"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
