<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/navbar"
        tools:layout="@layout/fragment_navbar"
        android:name="mobdev.agrikita.pages.Navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F9F2E5">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Location -->
                    <EditText
                        android:id="@+id/location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Cebu City, Philippines"
                        android:textSize="25sp"
                        android:textColor="#555"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Date Selector -->
                    <LinearLayout
                        android:id="@+id/dateSelector"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/location"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">


                        <TextView
                            android:id="@+id/currentDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:text="Date"
                            android:textSize="16sp"
                            android:gravity="center"/>
                        <!--                    &lt;!&ndash; Sample Dates &ndash;&gt;-->
                        <!--                    <TextView style="@style/DateItem" android:text="6\nSun"/>-->
                        <!--                    <TextView style="@style/DateItem" android:text="7\nMon"/>-->
                        <!--                    <TextView style="@style/DateItem.Highlighted" android:text="8\nTue"/>-->
                        <!--                    <TextView style="@style/DateItem" android:text="9\nWed"/>-->
                        <!--                    <TextView style="@style/DateItem" android:text="10\nThu"/>-->
                    </LinearLayout>

                    <!-- WeatherService Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/weatherCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:layout_constraintTop_toBottomOf="@id/dateSelector"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="12dp">

                                <!-- Left side: Texts -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/conditionText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Cloudy Day"
                                        android:textSize="20sp"
                                        android:textColor="#444" />

                                    <TextView
                                        android:id="@+id/Temperature"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="16°C"
                                        android:textSize="40sp"
                                        android:textColor="#2E7D32"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:id="@+id/maxTemp"
                                            android:layout_width="wrap_content"
                                            android:padding="3dp"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:textColor="@color/black"
                                            android:text="Max: 30°C"
                                            tools:ignore="HardcodedText" />

                                        <TextView
                                            android:id="@+id/minTemp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:textColor="@color/black"
                                            android:padding="3dp"
                                            android:text="Min: 30°C"
                                            tools:ignore="HardcodedText" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- Right side: Icon -->
                                <ImageView
                                    android:id="@+id/weatherIcon"
                                    android:layout_width="209dp"
                                    android:layout_height="136dp"
                                    android:layout_gravity="end"
                                    android:src="@drawable/ic_01d" />
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="12dp"
                                android:gravity="center">


                                <TextView
                                    android:id="@+id/humidity"
                                    style="@style/WeatherStat"
                                    android:text="Humidity\n74%" />

                                <TextView
                                    android:id="@+id/pressure"
                                    style="@style/WeatherStat"
                                    android:text="Pressure\n1019" />

                                <TextView
                                    android:id="@+id/wind"
                                    style="@style/WeatherStat"
                                    android:text="Wind\n18 km/h" />

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Stat Cards Grid -->
                    <LinearLayout
                        android:id="@+id/statCardsLinear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:padding="8dp"
                        app:layout_constraintTop_toBottomOf="@id/weatherCard"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <!-- Row 1: Sunrise + Sunset -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginBottom="8dp">

                            <!-- Sunrise -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@android:color/white"
                                android:padding="16dp"
                                android:layout_marginEnd="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🌅 Sunrise"
                                    android:textColor="#2E7D32"
                                    android:textStyle="bold"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/sunriseTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5:36 AM"
                                    android:textColor="#2E7D32"
                                    android:textStyle="bold"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/sunriseDesc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="sun is showing up normally today"
                                    android:textSize="12sp"
                                    android:textColor="#777" />
                            </LinearLayout>

                            <!-- Sunset -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@android:color/white"
                                android:padding="16dp"
                                android:layout_marginStart="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🌇 Sunset"
                                    android:textColor="#2E7D32"
                                    android:textStyle="bold"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/sunsetTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5:54 PM"
                                    android:textColor="#2E7D32"
                                    android:textStyle="bold"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/sunsetDesc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="sun is setting normally today"
                                    android:textSize="12sp"
                                    android:textColor="#777" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Row 2: Rainfall + Feels Like -->
                        <!-- Country Name + WeatherService Description -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingBottom="12dp">

                            <TextView
                                android:id="@+id/countryName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="London, GB"
                                android:textSize="35sp"
                                android:textColor="#000000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/weatherDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="light intensity drizzle"
                                android:textSize="16sp"
                                android:textColor="#666666"
                                android:paddingTop="4dp" />

                            <Button
                                android:id="@+id/fetchWeatherButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/weatherDescription"
                                android:backgroundTint="#2B3A67"
                                android:text="Change City"
                                android:textColor="#FFF"
                                android:textSize="20sp"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
            <ProgressBar
                android:id="@+id/loadingSpinner"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                android:elevation="10dp"/>

            <View
                android:id="@+id/loadingOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:visibility="gone"/>
        </FrameLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>

