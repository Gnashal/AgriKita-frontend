<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.Marketplace"
    android:background="@color/agrikita_background">

    <include layout="@layout/fragment_navbar"
        android:id="@+id/navbar_added"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navbar_added">


        <!-- Title -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:paddingBottom="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Market"
                android:textColor="@color/agrikita_dark_green"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place"
                android:textColor="@color/agrikita_green"
                android:textSize="30dp" />
        </LinearLayout>

        <!-- Search Bar -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@drawable/round_search_bar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/round_search_icon"
                    android:clipToOutline="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/market_white_search" />
                </FrameLayout>

                <EditText
                    android:id="@+id/search_product_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="What are you looking for?"
                    android:inputType="text"
                    android:textSize="12sp" />
            </LinearLayout>
        </FrameLayout>

        <!-- Category Filter -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/all_button"
                    style="@style/CategoryButton"
                    android:text="All"
                    app:backgroundTint="@null" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fruit_button"
                    style="@style/CategoryButton"
                    android:text="Fruits"
                    app:backgroundTint="@null" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/grain_button"
                    style="@style/CategoryButton"
                    android:text="Grains"
                    app:backgroundTint="@null" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/meat_button"
                    style="@style/CategoryButton"
                    android:text="Meat"
                    app:backgroundTint="@null" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/poultry_button"
                    style="@style/CategoryButton"
                    android:text="Poultry"
                    app:backgroundTint="@null" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/produce_button"
                    style="@style/CategoryButton"
                    android:text="Produce"
                    app:backgroundTint="@null" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/spice_button"
                    style="@style/CategoryButton"
                    android:text="Spice"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- RecyclerView for products (instead of GridView) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_grid_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
