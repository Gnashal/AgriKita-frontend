<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.Marketplace">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/agrikita_background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingBottom="2dp">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/round_profile_picture_frame"
                    android:clipToOutline="true"
                    android:layout_marginLeft="5sp"
                    android:backgroundTint="@color/white"
                    android:elevation="4dp">

                    <ImageView
                        android:id="@+id/proile_picture_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:srcCompat="@tools:sample/avatars" />
                </FrameLayout>

                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="85sp"
                    android:layout_marginRight="10sp"
                    app:srcCompat="@drawable/agrikita_header_text_g1" />

                <ImageButton
                    android:id="@+id/notification_bell_button"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_margin="10sp"
                    android:backgroundTint="@color/white"
                    app:srcCompat="@drawable/market_bell" />

                <ImageButton
                    android:id="@+id/go_to_checkout_button"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_margin="10sp"
                    android:backgroundTint="@color/white"
                    app:srcCompat="@drawable/market_shopping_cart" />

                <ImageButton
                    android:id="@+id/mk_dropdown_menu_button"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_margin="5sp"
                    android:backgroundTint="@color/white"
                    app:srcCompat="@drawable/market_menu_burger" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Market"
                    android:textColor="@color/agrikita_dark_green"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place"
                    android:textColor="@color/agrikita_green"
                    android:textSize="30dp" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:background="@drawable/round_search_bar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:background="@drawable/round_search_icon"
                        android:clipToOutline="true"
                        android:layout_margin="5sp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/market_white_search" />
                    </FrameLayout>

                    <EditText
                        android:id="@+id/search_product_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:inputType="text"
                        android:hint="What are you looking for?" />
                </LinearLayout>
            </FrameLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/all_button"
                        style="@style/CategoryButton"
                        android:text="All"
                        app:backgroundTint="@null" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fruit_button"
                        style="@style/CategoryButton"
                        android:text="Fruits"
                        app:backgroundTint="@null" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/grain_button"
                        style="@style/CategoryButton"
                        android:text="Grains"
                        app:backgroundTint="@null" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/meat_button"
                        style="@style/CategoryButton"
                        android:text="Meat"
                        app:backgroundTint="@null" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/poultry_button"
                        style="@style/CategoryButton"
                        android:text="Poultry"
                        app:backgroundTint="@null" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/produce_button"
                        style="@style/CategoryButton"
                        android:text="Produce"
                        app:backgroundTint="@null" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/spice_button"
                        style="@style/CategoryButton"
                        android:text="Spice"
                        app:backgroundTint="@null" />
                </LinearLayout>
            </HorizontalScrollView>

            <GridView
                android:id="@+id/product_grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:verticalSpacing="16dp"
                android:horizontalSpacing="16dp"
                android:stretchMode="columnWidth"
                android:gravity="center"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>