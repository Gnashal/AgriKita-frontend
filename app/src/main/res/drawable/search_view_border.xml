<!-- res/drawable/searchview_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Solid background (optional) -->
    <solid android:color="#FFFFFF" />  <!-- White background -->
    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />  <!-- Light gray border -->
    <!-- Rounded corners (optional) -->
    <corners android:radius="4dp" />  <!-- 8dp rounded corners -->
</shape>